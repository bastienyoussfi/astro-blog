---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description?: string;
  date: Date;
  readingTime: string;
  image?: string;
}

const { title, description, date, readingTime, image } = Astro.props;

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' });
}
---

<header class="mb-8 md:mb-12">
  <h1 class="text-4xl md:text-5xl font-bold mb-4">{title}</h1>
  {description && (
    <p class="text-xl text-gray-400 mb-4">{description}</p>
  )}
  {image && (
    <Image src={image} alt={title} width={1000} height={1000} class="w-full h-auto rounded-lg mb-4" />
  )}
  <p class="text-gray-300 font-medium opacity-50">{formatDate(date)} Â· {readingTime}</p>
</header>
