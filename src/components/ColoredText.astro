---
const { children, color } = Astro.props;

// Map color names to Tailwind's text color classes
const colorClasses: Record<string, string> = {
  red: 'text-red-500',
  blue: 'text-blue-500',
  green: 'text-green-500',
  yellow: 'text-yellow-500',
  purple: 'text-purple-500',
  // Add more colors as needed
};

const colorClass = colorClasses[color] || `text-${color}-500`;
---

<span class={colorClass}>{children}</span>
