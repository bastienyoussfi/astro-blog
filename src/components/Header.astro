---
import { Icon } from 'astro-icon/components';

const currentPath = Astro.url.pathname;
---

<header class="p-6 mb-10 mt-2 px-10">
    <div class="flex justify-between items-center">
        <div class="flex items-center gap-8">
            <h1 class="text-2xl font-bold">
                <a href="/">BY</a>
            </h1>
            
            {/* Desktop Navigation Links */}
            <nav class="hidden md:block">
                <ul class="flex gap-6 text-sm">
                    <li>
                        <a 
                            href="/" 
                            class={`transition-colors ${currentPath === '/' ? 'text-white' : 'text-gray-400 hover:text-white'}`}
                        >
                            Blog
                        </a>
                    </li>
                    <li>
                        <a 
                            href="/learn" 
                            class={`transition-colors ${currentPath.startsWith('/learn') ? 'text-white' : 'text-gray-400 hover:text-white'}`}
                        >
                            Learn
                        </a>
                    </li>
                    <li>
                        <a 
                            href="/projects" 
                            class={`transition-colors ${currentPath.startsWith('/projects') ? 'text-white' : 'text-gray-400 hover:text-white'}`}
                        >
                            Projects
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        
        <div class="flex items-center gap-4">
            {/* Social Icons - Hidden on mobile to save space */}
            <nav class="hidden sm:block">
                <ul class="flex gap-1 space-x-4 opacity-70">
                    <li>
                        <a href="https://twitter.com/bastienyoussfi_" target="_blank" aria-label="Twitter">
                            <Icon name="lucide:twitter" class="w-5 h-5 text-gray-400 hover:text-white" />
                        </a>
                    </li>
                    <li>
                        <a href="https://github.com/bastienyoussfi" target="_blank" aria-label="GitHub">
                            <Icon name="lucide:github" class="w-5 h-5 text-gray-400 hover:text-white" />
                        </a>
                    </li>
                    <li>
                        <a href="https://www.linkedin.com/in/bastienyoussfi/" target="_blank" aria-label="LinkedIn">
                            <Icon name="lucide:linkedin" class="w-5 h-5 text-gray-400 hover:text-white" />
                        </a>
                    </li>
                    <li>
                        <a href="https://www.instagram.com/bastienyoussfi/" target="_blank" aria-label="Instagram">
                            <Icon name="lucide:instagram" class="w-5 h-5 text-gray-400 hover:text-white" />
                        </a>
                    </li>
                </ul>
            </nav>
            
            {/* Mobile Menu Button */}
            <button 
                id="mobile-menu-button"
                class="md:hidden text-gray-400 hover:text-white transition-colors"
                aria-label="Toggle menu"
            >
                <Icon name="lucide:menu" class="w-6 h-6" />
            </button>
        </div>
    </div>

    {/* Mobile Menu */}
    <nav id="mobile-menu" class="hidden md:hidden mt-6 pt-6 border-t border-gray-800">
        <ul class="space-y-4">
            <li>
                <a 
                    href="/" 
                    class={`block text-lg transition-colors ${currentPath === '/' ? 'text-white' : 'text-gray-400 hover:text-white'}`}
                >
                    Blog
                </a>
            </li>
            <li>
                <a 
                    href="/learn" 
                    class={`block text-lg transition-colors ${currentPath.startsWith('/learn') ? 'text-white' : 'text-gray-400 hover:text-white'}`}
                >
                    Learn
                </a>
            </li>
            <li>
                <a 
                    href="/projects" 
                    class={`block text-lg transition-colors ${currentPath.startsWith('/projects') ? 'text-white' : 'text-gray-400 hover:text-white'}`}
                >
                    Projects
                </a>
            </li>
            <li class="pt-4 border-t border-gray-800">
                <div class="flex gap-6">
                    <a href="https://twitter.com/bastienyoussfi_" target="_blank" aria-label="Twitter">
                        <Icon name="lucide:twitter" class="w-5 h-5 text-gray-400 hover:text-white" />
                    </a>
                    <a href="https://github.com/bastienyoussfi" target="_blank" aria-label="GitHub">
                        <Icon name="lucide:github" class="w-5 h-5 text-gray-400 hover:text-white" />
                    </a>
                    <a href="https://www.linkedin.com/in/bastienyoussfi/" target="_blank" aria-label="LinkedIn">
                        <Icon name="lucide:linkedin" class="w-5 h-5 text-gray-400 hover:text-white" />
                    </a>
                    <a href="https://www.instagram.com/bastienyoussfi/" target="_blank" aria-label="Instagram">
                        <Icon name="lucide:instagram" class="w-5 h-5 text-gray-400 hover:text-white" />
                    </a>
                </div>
            </li>
        </ul>
    </nav>
</header>

<script>
    // Mobile menu toggle
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    menuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
    });
    
    // Close menu when clicking a link
    const mobileLinks = mobileMenu?.querySelectorAll('a');
    mobileLinks?.forEach(link => {
        link.addEventListener('click', () => {
            mobileMenu?.classList.add('hidden');
        });
    });
</script>