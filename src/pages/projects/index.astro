---
import "../../styles/globals.css";
import Layout from "../../layouts/Layout.astro";
import Icon from "../../components/Icon.astro";
import { getCollection } from "astro:content";

// Get all projects
const projects = await getCollection("projects", ({ data }) => !data.draft);
projects.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

// Get all journeys for filtering
const journeys = await getCollection("journeys");

// Group projects by journey
const projectsByJourney = projects.reduce(
    (acc, project) => {
        const journey = project.data.journey;
        if (!acc[journey]) {
            acc[journey] = [];
        }
        acc[journey].push(project);
        return acc;
    },
    {} as Record<string, typeof projects>,
);
---

<Layout title="Projects - Bastien Youssfi">
    <main class="py-8 md:py-12">
        <!-- Header -->
        <div class="max-w-[65ch] mx-auto mb-16">
            <h1 class="text-5xl md:text-6xl font-bold mb-4 flex items-center gap-3">
                <Icon name="rocket" size="xl" />
                Projects
            </h1>
            <p class="text-xl text-gray-400">
                Practical implementations and experiments from my learning
                journeys.
            </p>
        </div>

        {/* All Projects */}
        {
            projects.length > 0 ? (
                <div class="max-w-[65ch] mx-auto">
                    {Object.entries(projectsByJourney).map(
                        ([journeySlug, journeyProjects]) => {
                            const journey = journeys.find(
                                (j) => j.slug === journeySlug,
                            );

                            return (
                                <div class="mb-16">
                                    {journey && (
                                        <div class="flex items-center gap-3 mb-6">
                                            <Icon name={journeySlug} size="lg" class="flex-shrink-0" />
                                            <h2 class="text-2xl font-bold">
                                                {journey.data.title}
                                            </h2>
                                            <span class="text-sm text-gray-500">
                                                ({journeyProjects.length})
                                            </span>
                                        </div>
                                    )}

                                    <div class="grid md:grid-cols-2 gap-6">
                                        {journeyProjects.map((project) => (
                                            <a
                                                href={`/projects/${project.slug}`}
                                                class="block p-6 border border-gray-800 rounded-lg hover:border-gray-700 transition-all group"
                                            >
                                                <div class="flex items-start justify-between mb-3">
                                                    <h3 class="text-xl font-semibold group-hover:text-gray-300 transition-colors flex-1">
                                                        {project.data.title}
                                                    </h3>
                                                    <span
                                                        class={`text-xs px-2 py-1 rounded capitalize ${
                                                            project.data
                                                                .status ===
                                                            "completed"
                                                                ? "bg-green-900/30 text-green-400"
                                                                : project.data
                                                                        .status ===
                                                                    "in-progress"
                                                                  ? "bg-yellow-900/30 text-yellow-400"
                                                                  : "bg-gray-800 text-gray-400"
                                                        }`}
                                                    >
                                                        {project.data.status.replace(
                                                            "-",
                                                            " ",
                                                        )}
                                                    </span>
                                                </div>

                                                <p class="text-gray-400 text-sm mb-4">
                                                    {project.data.description}
                                                </p>

                                                {/* Tech Stack */}
                                                <div class="flex flex-wrap gap-2 mb-4">
                                                    {project.data.techStack
                                                        .slice(0, 4)
                                                        .map((tech) => (
                                                            <span class="text-xs px-2 py-1 bg-gray-800/50 rounded">
                                                                {tech}
                                                            </span>
                                                        ))}
                                                    {project.data.techStack
                                                        .length > 4 && (
                                                        <span class="text-xs px-2 py-1 text-gray-500">
                                                            +
                                                            {project.data
                                                                .techStack
                                                                .length -
                                                                4}{" "}
                                                            more
                                                        </span>
                                                    )}
                                                </div>

                                                {/* Links */}
                                                <div class="flex gap-3 text-xs text-gray-500">
                                                    {project.data.githubUrl && (
                                                        <span class="flex items-center gap-1">
                                                            <svg
                                                                xmlns="http://www.w3.org/2000/svg"
                                                                class="h-3 w-3"
                                                                fill="currentColor"
                                                                viewBox="0 0 24 24"
                                                            >
                                                                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                                                            </svg>
                                                            GitHub
                                                        </span>
                                                    )}
                                                    {project.data.liveUrl && (
                                                        <span class="flex items-center gap-1">
                                                            <svg
                                                                xmlns="http://www.w3.org/2000/svg"
                                                                class="h-3 w-3"
                                                                fill="none"
                                                                viewBox="0 0 24 24"
                                                                stroke="currentColor"
                                                            >
                                                                <path
                                                                    stroke-linecap="round"
                                                                    stroke-linejoin="round"
                                                                    stroke-width="2"
                                                                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                                                />
                                                            </svg>
                                                            Live Demo
                                                        </span>
                                                    )}
                                                    <span class="capitalize">
                                                        {
                                                            project.data
                                                                .difficulty
                                                        }
                                                    </span>
                                                </div>
                                            </a>
                                        ))}
                                    </div>
                                </div>
                            );
                        },
                    )}
                </div>
            ) : (
                <div class="max-w-[65ch] mx-auto text-center py-16">
                    <p class="text-gray-500 mb-6">
                        No projects yet. Check back soon!
                    </p>
                    <a
                        href="/learn"
                        class="inline-block px-6 py-3 bg-gray-800 hover:bg-gray-700 rounded-lg transition-colors"
                    >
                        View Learning Journey
                    </a>
                </div>
            )
        }
    </main>
</Layout>
